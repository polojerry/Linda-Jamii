<resources>
    <!-- Base application theme. -->
    <style name="Theme.LindaJamii" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Theme.App.SplashScreen" parent="Theme.LindaJamii">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Theme.LindaJamii.TextInputLayout.Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/colorTextIcons</item>
    </style>

    <style name="Theme.LindaJamii.TextInputLayout.Outlined.ExposedDropMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/colorTextIcons</item>
    </style>


    <style name="Theme.LindaJamii.DarkActionBar" parent="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorButtonNormal">@color/colorTextIcons</item>
    </style>

    <style name="Theme.LindaJamii.HomeWelcomeCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="Theme.LindaJamii.CardHomeItem" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorTextIcons</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="Theme.LindaJamii.TextVisitHeading" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textSize">22sp</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>